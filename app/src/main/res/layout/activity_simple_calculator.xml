<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleCalculatorActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="95dp"
        android:text="@string/firstValue"
        android:textSize="18dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView"
        android:layout_alignBaseline="@id/textView"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/textView"
        android:layout_below="@id/textView"
        android:layout_marginTop="30dp"
        android:text="@string/secondValue"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView2"
        android:layout_alignBaseline="@id/textView2"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView2" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:layout_toRightOf="@id/buttonAdd"
        android:layout_alignBaseline="@id/buttonAdd"
        android:layout_below="@id/textView2" />

    <Button
        android:id="@+id/buttonMult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="20dp"
        android:layout_toLeftOf="@id/buttonDiv"
        android:layout_alignBaseline="@id/buttonAdd"
        android:layout_below="@id/textView2" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView2"
        android:layout_alignBaseline="@id/buttonAdd"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultText"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignEnd="@id/textView"
        android:layout_below="@id/buttonAdd"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView3"
        android:layout_alignBaseline="@id/textView3"
        android:layout_marginLeft="5dp" />


</RelativeLayout>